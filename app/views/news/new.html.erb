          <span class="upload-info">Recommend size 851 x 315 px</span>
          <%= file_field_tag :banner_image, class: "file-input" %>
        </div>
      </div>

      <!-- More Images (Gallery) -->
      <div class="gallery-upload">
        <div class="gallery-header">
          <label>More Images</label>
          <span class="gallery-note">(show as gallery)</span>
        </div>
        <div class="gallery-grid">
          <% 5.times do %>
            <div class="upload-box small">
              <span class="upload-icon">+</span>
              <span class="upload-text">Upload</span>
              <%= file_field_tag :more_images, multiple: true, class: "file-input" %>
            </div>
          <% end %>
        </div>
      </div>

    </div>
  </div>


<% end %>
