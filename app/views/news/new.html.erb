<%= form_with url: news_create_path, method: :post, local: true, html: { class: "form", multipart: true } do %>

  <!-- Header Section -->
  <div class="form-header">
    <h1 class="page-title">à¸ªà¸£à¹‰à¸²à¸‡à¸‚à¹ˆà¸²à¸§à¸ªà¸²à¸£</h1>
    <%= submit_tag "+à¸ªà¸£à¹‰à¸²à¸‡à¸‚à¹ˆà¸²à¸§à¸ªà¸²à¸£", class: "btn-create" %>
  </div>

  <!-- Title -->
  <div class="form-group">
    <label>Title</label>
    <%= text_field_tag :title, @news[:title], class: "form-control", placeholder: "Enter news title" %>
  </div>

  <!-- Content -->
  <div class="form-group">
    <label>Content</label>
    <%= text_area_tag :content, @news[:content], class: "form-control textarea", placeholder: "Enter news content" %>
  </div>

  <!-- Category, Announcer, Publish Date -->
  <div class="form-row">
    <div class="form-group">
      <label>Category</label>
      <%= select_tag :category, options_for_select(["All"] + AdvisorGroup.pluck(:group_name), @news[:category]), { prompt: "Select", class: "form-control select-dropdown" } %>
    </div>
    <div class="form-group">
      <label>Publish Date</label>
      <%= date_field_tag :publish_date, @news[:publish_date], class: "form-control date-picker" %>
    </div>
  </div>

  <!-- Image Upload Section -->
  <div class="form-group">
    <h3>Images</h3>
    <div class="image-upload-container">
      
      <!-- Banner Upload (Large) -->
      <div class="banner-upload">
        <label>Banner Image</label>
